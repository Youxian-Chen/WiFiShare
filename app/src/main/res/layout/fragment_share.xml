<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SSID"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/ssid_text_share"/>

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Text1234"
        android:id="@+id/ssid_edit_share"
        android:layout_marginLeft="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/password_text_share"
        android:layout_below="@+id/ssid_text_share"/>

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="12345678"
        android:id="@+id/password_edit_share"
        android:layout_toRightOf="@+id/password_text_share"
        android:layout_below="@+id/ssid_text_share"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="share wifi"
        android:id="@+id/share_button_share"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/password_edit_share"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop sharing"
        android:id="@+id/stop_button_share"
        android:layout_below="@+id/share_button_share"
        android:layout_marginLeft="90dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hint_text_share"
        android:textSize="40dp"
        android:text="Back-To-Back Touch\nShare Your WiFi"
        android:layout_centerInParent="true"/>
</RelativeLayout>