<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container_main"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="@dimen/activity_button_minWidth"
            android:layout_height="@dimen/activity_button_Height"
            style="@style/ButtonMainActivity"
            android:text="@string/share_wifi"
            android:id="@+id/share_button_main"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/middle_text_main"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_text_minHeight"
            android:layout_centerInParent="true"
            android:id="@+id/middle_text_main"/>
        <Button
            android:layout_width="@dimen/activity_button_minWidth"
            android:layout_height="@dimen/activity_button_Height"
            style="@style/ButtonMainActivity"
            android:text="@string/receive_wifi"
            android:id="@+id/accept_button_main"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/middle_text_main"/>

    </RelativeLayout>


</FrameLayout>
